@{
    ViewData["Title"] = "Relatório de Categorias de Problema";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Relatório de Categorias de Problema</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            max-width: 800px;
        }

        h2 {
            color: #2c3e50;
            font-weight: bold;
        }

        .table thead {
            background-color: #2c3e50;
            color: #fff;
        }

        .table-hover tbody tr:hover {
            background-color: #f2f2f2;
        }

        .bar {
            height: 100%;
            background-color: #2c3e50;
            color: #fff;
            text-align: center;
            border-radius: 4px;
        }
    </style>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>

    <div class="container mt-5">
        <h2 class="text-center mb-5">Relatório de Categorias de Problema</h2>

        <!-- Tabela de Categorias de Problema -->
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Categoria</th>
                    <th>Ocorrências</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Conexão</td>
                    <td>
                        <div style="width: 70%;"><div class="bar" style="width: 70%;">70</div></div>
                    </td>
                </tr>
                <tr>
                    <td>Erro de Sistema</td>
                    <td>
                        <div style="width: 85%;"><div class="bar" style="width: 85%;">85</div></div>
                    </td>
                </tr>
                <tr>
                    <td>Login</td>
                    <td>
                        <div style="width: 60%;"><div class="bar" style="width: 60%;">60</div></div>
                    </td>
                </tr>
                <tr>
                    <td>Instabilidade</td>
                    <td>
                        <div style="width: 40%;"><div class="bar" style="width: 40%;">40</div></div>
                    </td>
                </tr>
            </tbody>
        </table>

        <!-- Gráfico de Barras para Resumo -->
        <canvas id="barChart" width="400" height="200"></canvas>
    </div>

    <script>
        // Configuração do gráfico de barras
        const ctx = document.getElementById('barChart').getContext('2d');
        const barChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Conexão', 'Erro de Sistema', 'Login', 'Instabilidade'],
                datasets: [{
                    label: 'Ocorrências',
                    data: [70, 85, 60, 40],
                    backgroundColor: '#2c3e50',
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>

    <!-- Scripts necessários para Bootstrap -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
