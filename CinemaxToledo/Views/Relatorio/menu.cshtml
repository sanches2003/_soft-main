@{
    ViewData["Title"] = "Relatórios";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard de Relatórios</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            max-width: 900px;
        }

        h2 {
            color: #2c3e50; /* Azul escuro */
            font-weight: bold;
        }

        .card {
            border: none;
            border-radius: 8px;
            transition: 0.3s;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            }

        .card-title {
            color: #2c3e50; /* Azul escuro */
            font-weight: bold;
        }

        .btn-primary {
            background-color: #2c3e50; /* Azul escuro */
            border: none;
            transition: 0.3s;
        }

            .btn-primary:hover {
                background-color: #1a252f; /* Azul ainda mais escuro para hover */
            }

        .icon {
            font-size: 2rem;
            color: #2c3e50; /* Azul escuro */
        }
    </style>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>

    <div class="container mt-5">
        <h2 class="text-center mb-5">Dashboard de Relatórios</h2>

        <div class="row justify-content-center">
            <!-- Card Agentes -->
            <div class="col-md-4 mb-4">
                <div class="card text-center">
                    <div class="card-body">
                        <i class="fas fa-user-tie icon mb-3"></i>
                        <h5 class="card-title">Agentes</h5>
                        <a asp-action="agentes" asp-controller="Relatorio" class="btn btn-primary">Acessar Relatório</a>
                    </div>
                </div>
            </div>

            <!-- Card Categoria do Problema -->
            <div class="col-md-4 mb-4">
                <div class="card text-center">
                    <div class="card-body">
                        <i class="fas fa-exclamation-triangle icon mb-3"></i>
                        <h5 class="card-title">Categoria do Problema</h5>
                        <a asp-action="categoriadoproblema" asp-controller="Relatorio" class="btn btn-primary">Acessar Relatório</a>
                    </div>
                </div>
            </div>

            <!-- Card Plataforma -->
            <div class="col-md-4 mb-4">
                <div class="card text-center">
                    <div class="card-body">
                        <i class="fas fa-desktop icon mb-3"></i>
                        <h5 class="card-title">Plataforma</h5>
                        <a asp-action="plataformas" asp-controller="Relatorio" class="btn btn-primary">Acessar Relatório</a>
                    </div>
                </div>
            </div>

            <!-- Card Empresa -->
            <div class="col-md-4 mb-4">
                <div class="card text-center">
                    <div class="card-body">
                        <i class="fas fa-building icon mb-3"></i>
                        <h5 class="card-title">Empresa</h5>
                        <a asp-action="empresas" asp-controller="Relatorio" class="btn btn-primary">Acessar Relatório</a>
                    </div>
                </div>
            </div>

            <!-- Card Forma de Atendimento -->
            <div class="col-md-4 mb-4">
                <div class="card text-center">
                    <div class="card-body">
                        <i class="fas fa-headset icon mb-3"></i>
                        <h5 class="card-title">Forma de Atendimento</h5>
                        <a asp-action="formasdeatendimento" asp-controller="Relatorio" class="btn btn-primary">Acessar Relatório</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts necessários para Bootstrap -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
