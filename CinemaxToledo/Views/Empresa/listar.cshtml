@model IEnumerable<EmpresaModel>
@{
    ViewData["Title"] = "listar";
}

<div class="container">
    <!-- Estrutura flexível para o título e o botão -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">Empresas</h1>
        <a href="~/Empresa/cadastro" class="btn btn-info" style="background-color: #021532; border-color: #021532;">
            Novo
        </a>
    </div>

    <span class="alert @ViewBag.classe">@ViewBag.mensagem</span>

    <script>
        function confirmExclusao(id) {
            if (confirm("Tem certeza que deseja excluir essa empresa?")) {
                location.href = "/Empresa/excluir/" + id;
            }
        }
    </script>

    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Código</th>
                <th scope="col">Razão Social</th>
                <th scope="col">CNPJ</th>
                <th scope="col">Alterar</th>
                <th scope="col">Excluir</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.id</th>
                    <td>@item.razaosocial</td>
                    <td>@item.cnpj</td>
                    <td>
                        <a href="~/Empresa/prealterar/@item.id" class="btn btn-primary" style="background-color: #021532; border-color: #021532;">
                            Alterar
                        </a>
                    </td>
                    <td>
                        <a href="#" class="btn btn-primary" onclick="confirmExclusao(@item.id)" style="background-color: #021532; border-color: #021532;">
                            Excluir
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
