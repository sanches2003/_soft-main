@model CompusoftAtendimento.Models.LoginModel
@{
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>

<header>
    <nav class="navbar bg-dark" aria-label="breadcrumb" style="height: 60px;">
        <a class="font-weight-bold bg-dark" style="height: 40px;" href="~/HomeSite/Index">
            <h4>
                <span style="color: white;">COMPU</span><span style="color: gray;">SOFT</span> <span style="color: white;">ATENDIMENTO</span>
            </h4>
        </a>
        <ul class="navbar-nav ml-auto">
            <li class="nav-item text-nowrap">
                <div class="row align-items-center">
                    <div class="col-auto">
                        <a class="text-white">Bem vindo(a) @Context.Session.GetString("nomeLogin")!</a>
                    </div>
                    <div class="col-auto">
                        <a class="nav-link" asp-controller="login" asp-action="sair">
                            <img src="~/icons/sair.png" width="30" height="30" alt="Sair" />
                        </a>
                    </div>
                </div>
            </li>
        </ul>
    </nav>
</header>

<div class="container mt-4">
    <h3 class="text-center">Cadastro de Usuário</h3>
    <form asp-controller="Login" asp-action="salvarcadastrese" method="post">
        <div class="card p-4 mt-3" style="max-width: 500px; margin: auto;">
            <!-- Definindo a largura máxima do cartão -->
            <div class="row">
                <div class="col-12 form-group">
                    <label asp-for="id" class="font-weight-bold">ID</label>
                    <input readonly type="text" asp-for="id" class="form-control" />
                    <span asp-validation-for="id" class="alert-danger"></span>
                </div>
                <div class="col-12 form-group">
                    <label asp-for="login" class="font-weight-bold">Usuário</label>
                    <input type="text" asp-for="login" class="form-control" style="background-color: #f2f2f2;" placeholder="Digite seu login" required />
                    <span asp-validation-for="login" class="alert-danger"></span>
                </div>
                <div class="col-12 form-group">
                    <label asp-for="senha" class="font-weight-bold">Senha</label>
                    <input type="password" asp-for="senha" class="form-control" style="background-color: #f2f2f2;" placeholder="Digite sua senha" required />
                    <span asp-validation-for="senha" class="alert-danger"></span>
                </div>
                <div class="col-12 form-group">
                    <label asp-for="idCargo" class="font-weight-bold"></label>
                    <select class="form-control" style="background-color: #f2f2f2;" asp-for="idCargo" asp-items="@ViewBag.listacargos" required>
                        <option value="">Selecione um Cargo...</option>
                    </select>
                    <span asp-validation-for="idCargo" class="alert-danger"></span>
                </div>
                <div class="col-12 form-group">
                    <a href="~/Cargo/cadastresecargo" class="btn btn-info mt-2" style="background-color: #021532;">
                        Novo Cargo
                    </a>
                </div>
                <div class="col-12 form-group">
                    <input type="checkbox" asp-for="ativo" />
                    <label asp-for="ativo" class="font-weight-bold"> Administrador</label>
                    <span asp-validation-for="ativo" class="alert-danger"></span>
                </div>
                <div class="col-12 form-group text-center">
                    <input type="submit" value="Salvar" class="btn btn-primary" style="background-color: #021532; border-color: #021532;" />
                </div>
                <div class="col-12 form-group text-center" style="margin-top: 20px;">
                    <span class="alert @ViewBag.classe">@ViewBag.mensagem</span>
                </div>
            </div>
        </div>
    </form>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>

<!-- CSS personalizado -->
<style>
    .card {
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    h3 {
        color: #021532;
        font-weight: bold;
    }

    .alert-danger {
        font-size: 0.9em;
    }

    .btn-primary:hover {
        background-color: #03354d; /* Cor de hover */
        border-color: #03354d;
    }
</style>
