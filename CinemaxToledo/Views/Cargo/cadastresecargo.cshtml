@model CompusoftAtendimento.Models.CargoModel
@{
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}
<header>
    <nav class="navbar bg-dark" aria-label="breadcrumb" style="height: 60px;">
        <a class="font-weight-bold bg-dark" style="height: 40px;" href="~/HomeSite/Index">
            <h4>
                <span style="color: white;">COMPU</span>
                <span style="color: gray;">SOFT</span>
                <span style="color: white;">ATENDIMENTO</span>
            </h4>
        </a>
        <ul class="navbar-nav ml-auto">
            <li class="nav-item text-nowrap">
                <div class="row align-items-center">
                    <div class="col-auto">
                        <a class="text-white">Bem vindo(a) @Context.Session.GetString("nomeLogin")!</a>
                    </div>
                    <div class="col-auto">
                        <a class="nav-link" asp-controller="login" asp-action="sair">
                            <img src="~/icons/sair.png" width="30" height="30" alt="Sair" />
                        </a>
                    </div>
                </div>
            </li>
        </ul>
    </nav>
</header>

<div class="container mt-4">
    <h3 class="text-center">Cadastro de Cargos</h3>
    <form asp-controller="Cargo" asp-action="salvarcadastresecargo" method="post">
        <div class="card p-4 mt-3" style="max-width: 600px; margin: auto;">
            <div class="row">
                <div class="col-12 form-group">
                    <label asp-for="id" class="font-weight-bold">ID</label>
                    <input readonly type="text" asp-for="id" class="form-control" />
                    <span asp-validation-for="id" class="alert-danger"></span>
                </div>
                <div class="col-12 form-group">
                    <label asp-for="descricao" class="font-weight-bold">Descrição</label>
                    <input type="text" asp-for="descricao" class="form-control" style="background-color: #f2f2f2;" placeholder="Digite a descrição do cargo" required />
                    <span asp-validation-for="descricao" class="alert-danger"></span>
                </div>
                <div class="col-12 form-group text-center">
                    <input type="submit" value="Salvar" class="btn btn-primary" style="background-color: #021532; border-color: #021532;" />
                    <a href="~/Login/cadastrese" class="btn btn-secondary ml-2" style="background-color: #6c757d; border-color: #6c757d;">
                        Voltar
                    </a>
                </div>
                <div class="col-12 form-group text-center mt-3">
                    <span class="alert @ViewBag.classe">@ViewBag.mensagem</span>
                </div>
            </div>
        </div>
    </form>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>

<!-- CSS personalizado -->
<style>
    .card {
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    h3 {
        color: #021532;
        font-weight: bold;
    }

    .alert-danger {
        font-size: 0.9em;
    }

    .btn-primary:hover {
        background-color: #03354d; /* Cor de hover para o botão salvar */
        border-color: #03354d;
    }

    .btn-secondary:hover {
        background-color: #5a6268; /* Cor de hover para o botão voltar */
        border-color: #5a6268;
    }
</style>
