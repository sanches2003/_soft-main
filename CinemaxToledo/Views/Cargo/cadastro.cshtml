@model CompusoftAtendimento.Models.CargoModel
@{
    ViewData["Title"] = "Cadastro de Cargos";
}

<div class="container mt-5">
    <h1 class="text-dark font-weight-bold">Cadastro de Cargos</h1>
    <br />
    <form asp-controller="Cargo" asp-action="salvar" method="post">
        <div class="row">
            <div class="col-md-4 form-group">
                <label asp-for="id" class="font-weight-bold"></label>
                <input readonly type="text" asp-for="id" class="form-control" />
                <span asp-validation-for="id" class="alert-danger"></span>
            </div>
            <div class="col-md-8 form-group">
                <label asp-for="descricao" class="font-weight-bold"></label>
                <input type="text" asp-for="descricao" class="form-control" style="background-color: #f2f2f2;" />
                <span asp-validation-for="descricao" class="alert-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Salvar" class="btn btn-primary" style="background-color: #021532; border-color: #021532;" />
        </div>
        <div class="form-group" style="margin-top: 20px;">
            <span class="alert @ViewBag.classe" style="width: 100%; display: block;">@ViewBag.mensagem</span>
        </div>
    </form>
</div>

<!-- Scripts necessários para Bootstrap -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
