@model IEnumerable<AtendimentoModel>
@{
    ViewData["Title"] = "listar";
}

<div class="container">
    <!-- Estrutura flexível para o título e o botão -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">Fila de Atendimentos</h1>
    </div>

    <span class="alert @ViewBag.classe">@ViewBag.mensagem</span>

    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Código</th>
                <th scope="col">Assunto do Chamado</th>
                <th scope="col">Cliente</th>
                <th scope="col">Categoria do Problema</th>
                <th scope="col">Status</th>
                <th scope="col">Detalhes</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.id</td>
                    <td>@item.Assunto</td>
                    <td>@item.Contato</td>
                    <td>@item.categoriaproblema</td> <!-- Acessando a descrição -->
                    <td>@item.Status</td>
                    <td>
                        <a href="~/Atendimento/alterar/@item.id" class="btn btn-secondary" style="background-color: #021532; border-color: #021532;">
                            <i class="fas fa-eye"></i> <!-- Ícone de olho -->
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

