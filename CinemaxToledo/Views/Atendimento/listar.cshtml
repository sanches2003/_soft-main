@using Microsoft.AspNetCore.Http;
@model IEnumerable<AtendimentoModel>
@{
    ViewData["Title"] = "Fila de Atendimentos";

    var adm = @Context.Session.GetInt32("ativoTrue");

    var id = @Context.Session.GetInt32("idLogin");
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">Fila de Atendimentos</h1>
    </div>

    <span class="alert @ViewBag.classe">@ViewBag.mensagem</span>

    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Código</th>
                <th scope="col">Assunto do Chamado</th>
                <th scope="col">Cliente</th>
                <th scope="col">Categoria do Problema</th>
                <th scope="col">Status</th>
                <th scope="col">Detalhes</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                if (adm == 1)  // Se admin, mostra todos os atendimentos que não estão concluídos
                {
                    <tr>
                        <td>@item.id</td>
                        <td>@item.Assunto</td>
                        <td>@item.Contato</td>
                        <td>@item.categoriaproblema</td>
                        <td>@item.Status</td>
                        <td>
                            <a href="~/Atendimento/alterar/@item.id" class="btn btn-secondary" style="background-color: #021532; border-color: #021532;">
                                <i class="fas fa-eye"></i>
                            </a>
                        </td>
                    </tr>
                }
                else if  (adm == 0)
                    {
                        if (id == item.idUsuario)
                        {
                            <tr>
                                <td>@item.id</td>
                                <td>@item.Assunto</td>
                                <td>@item.Contato</td>
                                <td>@item.categoriaproblema</td>
                                <td>@item.Status</td>
                                <td>
                                    <a href="~/Atendimento/alterar/@item.id" class="btn btn-secondary" style="background-color: #021532; border-color: #021532;">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                }
            }
        </tbody>
    </table>
</div>