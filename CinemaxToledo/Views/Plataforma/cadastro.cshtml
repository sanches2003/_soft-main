@model CompusoftAtendimento.Models.PlataformaModel
@{
    ViewData["Title"] = "Cadastro de Plataformas";
}

<div class="container mt-5">
    <h1 class="text-dark font-weight-bold">Cadastro de Plataformas</h1>
    <form asp-controller="Plataforma" asp-action="salvar" method="post">
        <div class="row mb-4">
            <div class="col-md-1 form-group">
                <label asp-for="id" class="font-weight-bold"></label>
                <input readonly type="text" asp-for="id" class="form-control" style="background-color: #f2f2f2;" />
                <span asp-validation-for="id" class="alert-danger"></span>
            </div>
            <div class="col-md-11 form-group">
                <label asp-for="descricao" class="font-weight-bold"></label>
                <input type="text" asp-for="descricao" class="form-control" style="background-color: #f2f2f2;" />
                <span asp-validation-for="descricao" class="alert-danger"></span>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-12 form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" style="background-color: #021532; border-color: #021532;" />
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-12 form-group">
                <span class="alert @ViewBag.classe">@ViewBag.mensagem</span>
            </div>
        </div>
    </form>
</div>
